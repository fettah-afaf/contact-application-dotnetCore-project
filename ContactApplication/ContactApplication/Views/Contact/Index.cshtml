@model IEnumerable<ContactApplication.Models.Contact>

@{
    ViewData["Title"] = "Index";
}
<div class="row d-flex align-items-center justify-content-center" style="margin: 100px;">
<h5 style="margin-bottom: 20px; font-weight: bold;
  font-size: 1.1em;">See Your Contacts</h5>

<div class="gradient-buttonn " style=" margin-bottom: 20px;">
    <a  asp-action="Create">Create New Contact</a>
</div>
<main class="table" id="customers_table" style="margin-top: 20px;">
    <section class="table__header">
        <h1>Contacts</h1>
        <div class="input-group">
            <input type="search" placeholder="Search Data..." value="@ViewData["CurrentFilter"]">
            <img src="~/images/search.png" alt="">
        </div>
    </section>
    <section class="table__body">
        <table >
            <thead>
            <tr>
                <th>
                   First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Phone
                </th>
                <th>
                   Address
                </th>
                <th>
                    Email
                </th>
                <th>
                    Notes
                </th>
                <th>
                    Action
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Notes)
                    </td>
                    <td>
                        <div class="button-container">
                            <form asp-action="Edit" asp-route-id="@item.ContactId" method="get" style="display:inline;">
                                <button type="submit" class="btn btn-primary btn-sm">Edit</button>
                            </form>
                            <form asp-action="Details" asp-route-id="@item.ContactId"  style="display:inline;">
                                <button type="submit" class="btn btn-info btn-sm">Details</button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@item.ContactId"  style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this contact?');" >
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </section>
</main>
</div>